body common control {

   inputs => { "/var/cfengine/inputs/libraries/cfengine_stdlib.cf" };
        bundlesequence  => { "test" };
}

bundle agent test {

        vars:
    "params_dimension" int => readstringarrayidx(
         "params",
         "/tmp/c.txt",
         "\s*#[^\n]*",
         ":",
         3,
         99999),
       classes => if_repaired( "index" ),
       comment => "read in params array of size params_dimension";

    index::
    "i"        slist   => getindices("params");

        reports:

    index::
    "DEBUG: i: $(i)";
    "DEBUG: params: $(params[$(i)]): $(params[$(i)][0]) $(params[$(i)][2])";
}
