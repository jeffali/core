#######################################################
#
# Test readstringlist() issue 364
#
#######################################################

body common control
{
  inputs => { "../../default.cf.sub" };
  bundlesequence  => { default("$(this.promise_filename)") };
  version => "1.0";
}

#######################################################

bundle agent test
{
files:
        "$(G.testfile)"
            delete => init_delete;

        "$(G.testfile)"
            create => "true",
            edit_line => init_fill_in;
}

bundle edit_line init_fill_in
{
insert_lines:
        "123";
}

body delete init_delete
{
        dirlinks => "delete";
        rmdirs   => "true";
}

#######################################################

bundle agent check
{
vars:
        "nums" slist => readstringlist("$(G.testfile)","NoComment","\s+",5,100);
        "sum" real => sum("nums");

classes:
        "ok_list" not => strcmp("won't match", "$(nums)");
        "ok123" expression => strcmp("123", "$(nums)");
        "ok" and => { "ok_list",
                        islessthan("$(sum)", "123.1"),
                        isgreaterthan("$(sum)", "122.9")
                        };

reports:
    DEBUG::
        "nums: $(nums)";
        "sum: $(sum)";
    ok::
        "$(this.promise_filename) Pass";
    !ok::
        "$(this.promise_filename) FAIL";
}

